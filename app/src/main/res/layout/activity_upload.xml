<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ToolBarTheme"
    tools:context=".UploadActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/lot_list_of_type"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_disease"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#212121"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_disease"
                android:text="@string/bn_disease"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_pests"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#212121"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_pests"
                android:text="@string/bn_pests"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_nutrition_def"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#212121"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tv_nutrition_def"
                android:text="@string/bn_nutrition_def"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp"
                android:textSize="22sp"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>